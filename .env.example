# AIPX Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=dev
LOG_LEVEL=debug

# ============================================================================
# Kafka Configuration
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_MARKET_DATA=market-data-raw
KAFKA_TOPIC_TRADING_SIGNALS=trading-signals
KAFKA_TOPIC_ORDER_EVENTS=order-events
KAFKA_TOPIC_EXECUTIONS=executions
KAFKA_CONSUMER_GROUP=aipx-consumer-group

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aipx
POSTGRES_PASSWORD=aipx_dev_password
POSTGRES_DB=aipx
POSTGRES_MAX_CONNECTIONS=20

# Database URL (used by some services)
DATABASE_URL=postgresql://aipx:aipx_dev_password@localhost:5432/aipx

# ============================================================================
# TimescaleDB Configuration (for time-series data)
# ============================================================================
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5433
TIMESCALEDB_USER=aipx
TIMESCALEDB_PASSWORD=aipx_dev_password
TIMESCALEDB_DB=aipx_timeseries

# ============================================================================
# AWS Configuration (for production deployment)
# ============================================================================
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3
S3_BUCKET_NAME=aipx-data-lake-dev

# MSK (Managed Kafka)
MSK_BOOTSTRAP_SERVERS=

# ElastiCache (Redis)
ELASTICACHE_ENDPOINT=

# RDS (PostgreSQL)
RDS_ENDPOINT=

# ============================================================================
# Service Ports
# ============================================================================
# Data Ingestion Service
DATA_INGESTION_PORT=8081
DATA_INGESTION_WS_PORT=8082

# OMS (Order Management System)
OMS_GRPC_PORT=50051
OMS_HTTP_PORT=8083

# Cognitive Service (API Gateway)
COGNITIVE_API_PORT=8084

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ============================================================================
# Trading Configuration
# ============================================================================
# Risk Management
MAX_POSITION_SIZE=1000000
MAX_DAILY_LOSS_PERCENT=5.0
MAX_LOSS_PER_TRADE_PERCENT=2.0

# Order Defaults
DEFAULT_ORDER_TIMEOUT=30

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Metrics
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090

# Tracing
ENABLE_JAEGER_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Logging
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================================================
# External API Keys (for market data providers)
# ============================================================================
# KIS (Korea Investment & Securities) API
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_ACCOUNT_NUMBER=

# Alpha Vantage (for US stocks, optional)
ALPHA_VANTAGE_API_KEY=

# ============================================================================
# Machine Learning Model Configuration
# ============================================================================
MODEL_S3_BUCKET=aipx-ml-models
MODEL_VERSION=v1.0.0
MODEL_CACHE_DIR=/tmp/aipx/models

# ============================================================================
# Development Tools
# ============================================================================
# Hot Reload
ENABLE_HOT_RELOAD=true

# Debug Mode
DEBUG_MODE=true
DEBUG_PORT=2345
