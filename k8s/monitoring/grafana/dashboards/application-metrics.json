{
  "dashboard": {
    "title": "AIPX Application Metrics",
    "tags": ["aipx", "application", "services"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Request Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"aipx\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"aipx\", status=~\"5..\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "title": "P95 Latency by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=\"aipx\"}[5m])) by (service, le))",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "title": "P99 Latency by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=\"aipx\"}[5m])) by (service, le))",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "title": "Active gRPC Connections (OMS)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(grpc_server_started_total{service=\"oms\"}) - sum(grpc_server_handled_total{service=\"oms\"})"
          }
        ]
      },
      {
        "title": "Kafka Consumer Lag",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag{namespace=\"aipx\"})"
          }
        ]
      },
      {
        "title": "Redis Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))"
          }
        ]
      },
      {
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "sum(pg_stat_database_numbackends{datname=\"aipx\"})"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
