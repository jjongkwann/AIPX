{
  "dashboard": {
    "title": "AIPX System Metrics",
    "tags": ["aipx", "system", "infrastructure"],
    "timezone": "browser",
    "panels": [
      {
        "title": "CPU Usage by Pod",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"aipx\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Memory Usage by Pod",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"aipx\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"aipx\"}[5m])) by (pod)",
            "legendFormat": "RX {{pod}}"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"aipx\"}[5m])) by (pod)",
            "legendFormat": "TX {{pod}}"
          }
        ]
      },
      {
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(container_fs_reads_bytes_total{namespace=\"aipx\"}[5m])) by (pod)",
            "legendFormat": "Read {{pod}}"
          },
          {
            "expr": "sum(rate(container_fs_writes_bytes_total{namespace=\"aipx\"}[5m])) by (pod)",
            "legendFormat": "Write {{pod}}"
          }
        ]
      },
      {
        "title": "Pod Restart Count",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"aipx\"})"
          }
        ]
      },
      {
        "title": "Running Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"aipx\", phase=\"Running\"})"
          }
        ]
      },
      {
        "title": "Failed Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"aipx\", phase=\"Failed\"})"
          }
        ]
      },
      {
        "title": "Pending Pods",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{namespace=\"aipx\", phase=\"Pending\"})"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
