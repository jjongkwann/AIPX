# Service Configuration
SERVICE_NAME=data-recorder-service
ENVIRONMENT=development

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=data-recorder-group
KAFKA_TOPICS=market.tick,market.orderbook
KAFKA_OFFSET_OLD=false

# TimescaleDB Configuration
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5433
TIMESCALEDB_USER=aipx
TIMESCALEDB_PASSWORD=aipx_dev_password
TIMESCALEDB_DB=aipx_timeseries
TIMESCALEDB_MAX_CONNS=20

# S3 Configuration
S3_BUCKET=aipx-data-lake-dev
S3_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_WRITE_ENABLED=true
S3_PARTITION_PREFIX=market-data

# Batch Settings
BATCH_SIZE=1000
BATCH_TIMEOUT_MS=5000
S3_BATCH_SIZE=100000
S3_BATCH_TIMEOUT_SEC=3600
MAX_BUFFER_SIZE=100000
FLUSH_WORKERS=4

# Performance Settings
NUM_CONSUMERS=4
DB_WRITE_WORKERS=4
S3_WRITE_WORKERS=2
MAX_RETRIES=3
RETRY_BACKOFF_MS=1000
SHUTDOWN_TIMEOUT_SEC=30

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
