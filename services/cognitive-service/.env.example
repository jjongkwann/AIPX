# Service Configuration
SERVICE_NAME=cognitive-service
HOST=0.0.0.0
PORT=8001
ENVIRONMENT=development
DEBUG=false

# LLM Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here
DEFAULT_LLM=claude
CLAUDE_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4-turbo-preview

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aipx_cognitive
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_STRATEGY_CREATED=strategy.created
KAFKA_TOPIC_STRATEGY_APPROVED=strategy.approved
KAFKA_TOPIC_STRATEGY_REJECTED=strategy.rejected

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_KEY_PREFIX=cognitive:

# Session Configuration
SESSION_TTL=3600
MAX_RETRY_COUNT=3

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
