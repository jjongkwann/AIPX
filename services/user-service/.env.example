# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=15s
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aipx_users
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=10m

# JWT Configuration
# IMPORTANT: Generate secure random strings for production!
# Example: openssl rand -base64 64
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h  # 7 days
JWT_ISSUER=aipx-user-service

# Encryption Configuration
# IMPORTANT: Generate a secure 256-bit key for production!
# Example: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=your-base64-encoded-256-bit-master-key-change-in-production
ENCRYPTION_PREVIOUS_KEY=

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json
